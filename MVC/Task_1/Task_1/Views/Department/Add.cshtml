@model List<EmployeeBasicInfo>
@{
    ViewData["Title"] = "Add";
}

<h1>Add</h1>

<form method="post" action="/Department/SavaAdd" class="p-4">
    <div class="form-group mb-3">
        <label for="Name" class="form-label">Department Name</label>
        <input type="text" id="Name" name="Name" class="form-control" placeholder="Enter department name" />
    </div>

    <div class="form-group mb-3">
        <label for="Id" class="form-label">Manager Name</label>
        <select id="Id" name="Id" class="form-select">
            @foreach (var item in Model)
            {
                <option value="@item.Id">@item.Name</option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>

<br />
<a asp-controller="Department" asp-action="Index" class="btn btn-dark">Back To List</a>
