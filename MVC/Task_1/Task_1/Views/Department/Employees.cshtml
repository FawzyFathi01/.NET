@model Department
@{
    ViewData["Title"] = "Employees";
}

<h1>@Model.Name</h1>

<h4>Manager : @Model.Employees.Single(e => e.Id == Model.ManagerId).Name</h4>


<table class="table table-bordered table-hover">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Age</th>
        <th>Salary</th>
        <th>JobTitle</th>
        <th>City</th>
        <th>DeptID</th>
    </tr>

    @foreach (var item in Model.Employees)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Age</td>
            <td>@item.Salary</td>
            <td>@item.JobTitle</td>
            <td>@item.City</td>
            <td>@item.DeptID</td>
        </tr>
    }

</table>



<br />
<a asp-controller="Department" asp-action="Index" class="btn btn-dark">Back To List</a>